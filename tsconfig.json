{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "ES2022",
		"types": ["node"],
		"paths": {
			"~encore/*": ["./encore.gen/*"]
		},
		"composite": true,
		"strict": true,
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"sourceMap": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"compileOnSave": true,
	"include": ["src", "encore.app"]
}
